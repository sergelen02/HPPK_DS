{
  "version": "0.2.0",
  "configurations": [
    // ---- 모듈 모드: vendor 무시 (-mod=mod) ----
    {
      "name": "e2e (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/e2e",
      "env": { "GOFLAGS": "-mod=mod" },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "keygen (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/keygen",
      "env": { "GOFLAGS": "-mod=mod" }
    },
    {
      "name": "sign (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/sign",
      "env": { "GOFLAGS": "-mod=mod" }
    },
    {
      "name": "verify (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/verify",
      "env": { "GOFLAGS": "-mod=mod" }
    },

    // ---- KEM 디버깅 (있다면) ----
    {
      "name": "kem-encaps (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kem/encaps",
      "env": { "GOFLAGS": "-mod=mod" }
    },
    {
      "name": "kem-decaps (mod)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/kem/decaps",
      "env": { "GOFLAGS": "-mod=mod" }
    }
  ],
  "compounds": [
    // 병렬 실행이 필요하면 사용 (순차 실행은 아님)
    { "name": "sign+verify (mod)", "configurations": ["sign (mod)", "verify (mod)"] }
  ]
}
